      flex-direction: column;
      gap: 0.8rem;
      margin: 1rem 0;
    }

    .checkbox-label {
      display: flex;
      align-items: center;
      gap: 0.8rem;
      cursor: pointer;
      padding: 0.8rem;
      border-radius: 10px;
      background: rgba(255, 255, 255, 0.03);
      transition: all 0.3s ease;
