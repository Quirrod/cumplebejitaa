    .btn-confirm {
      width: 100%;
      padding: 1rem 2rem;
      margin-top: 1rem;
      border: none;
      border-radius: 50px;
      background: linear-gradient(135deg, #FFD700 0%, #FF6B00 100%);
      color: #000;
      font-size: 1.1rem;
      font-weight: 700;
      cursor: pointer;
      transition: all 0.3s ease;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .btn-confirm:hover {
      transform: translateY(-3px);
      box-shadow: 0 10px 30px rgba(255, 107, 0, 0.4);
    }

    .btn-confirm:active {
      transform: translateY(-1px);
    }

    .footer-message {
