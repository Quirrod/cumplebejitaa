      z-index: 0;
    }

    .content {
      position: relative;
      z-index: 1;
      text-align: center;
      max-width: 600px;
    }

    .ned-image {
      width: 120px;
      height: auto;
      animation: float 3s ease-in-out infinite;
      display: inline-block;
      border-radius: 10px;
    }

    @keyframes float {
      0%, 100% { transform: translateY(0) rotate(-5deg); }
      50% { transform: translateY(-15px) rotate(5deg); }
